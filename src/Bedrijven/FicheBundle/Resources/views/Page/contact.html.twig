{% extends 'BedrijvenFicheBundle::layout.html.twig' %}

{% block title %}Contact{% endblock%}

{% block body %}
    <header>
        <h1>Contact pagina</h1>
    </header>

    <p>Want to contact me?</p>

    <form action="{{ path('BedrijvenFicheBundle_contact') }}" method="post" {{ form_enctype(form) }} class="bedrijven">
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}

        <input type="submit" value="Submit" />
    </form>
{% endblock %}